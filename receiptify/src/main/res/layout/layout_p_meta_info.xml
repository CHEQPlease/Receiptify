<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:theme="@style/ReceiptifyThemePOS">
    <LinearLayout
        android:id="@+id/container_breakdown_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_breakdown_key_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem"
            android:textSize="3.5mm" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_breakdown_key_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$4.00"
            android:textSize="3.5mm"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_subscript_row"
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1mm">

        <TextView
            android:id="@+id/tv_breakdown_subscript_key_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Included Tax: "
            android:textSize="2.5mm" />

        <TextView
            android:id="@+id/tv_breakdown_subscript_key_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$0.91"
            android:textSize="2.5mm" />

    </LinearLayout>

</LinearLayout>

