<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="40mm"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:theme="@style/ReceiptifyThemeHandheld"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="0.5mm"
        android:layout_weight="4"
        tools:ignore="InOrMmUsage">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="3mm"
            tools:text="Egg"
            android:textStyle="bold"
            android:textSize="2.5mm"
            tools:ignore="NestedWeights"
            android:paddingEnd="3mm" />

        <TextView
            android:id="@+id/tv_item_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-- Cucumber\n-- Carrot aiusdof iaoui dfoa"
            android:textSize="2mm"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1.5mm"
        tools:text="123"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_weight="2"
        android:textSize="2.5mm"
        tools:ignore="InOrMmUsage"
        android:layout_marginRight="1.5mm" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="$4000.00"
        android:textSize="2.5mm"
        android:gravity="end"
        android:textStyle="bold"
        android:layout_weight="2.5"
        tools:ignore="InOrMmUsage" />

</LinearLayout>
